name: Deploy Vite site to GitHub Pages

on:
    push:
        branches: ['master']
    workflow_dispatch:

permissions:
    contents: read
    pages: write
    id-token: write

concurrency:
    group: 'pages'
    cancel-in-progress: true

jobs:
    deploy:
        environment:
            name: github-pages
            url: ${{ steps.deployment.outputs.page_url }}
        runs-on: ubuntu-latest
        steps:
            - name: Checkout
              uses: actions/checkout@v4

            - name: Set up Node
              uses: actions/setup-node@v4
              with:
                  node-version: lts/*
                  cache: 'npm'

            - name: Install dependencies
              run: npm ci

            - name: Build
              run: npm run build

            # Configura Pages (necesario para usar deploy-pages)
            - name: Setup Pages
              uses: actions/configure-pages@v5

            # Sube la carpeta de build
            - name: Upload artifact
              uses: actions/upload-pages-artifact@v3
              with:
                  path: './dist' # aseg√∫rate que Vite genera dist/

            # Despliega a GitHub Pages
            - name: Deploy to GitHub Pages
              id: deployment
              uses: actions/deploy-pages@v4
